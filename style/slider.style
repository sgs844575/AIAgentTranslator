QSlider::groove:horizontal {
    height: 6px;
    background: #e0e6ed;
    border-radius: 3px;
}
QSlider::sub-page:horizontal {
    background: #409eff;
    border-radius: 3px;
}
QSlider::handle:horizontal {
    background: #ffffff;
    border: 1px solid #dcdfe6;
    width: 16px;
    height: 16px;
    border-radius: 8px;
    margin: -5px 0;
}
QSlider::handle:horizontal:hover {
    border-color: #409eff;
}